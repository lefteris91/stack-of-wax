    <body>
      <% if (isLoggedIn) { %>
        <header class="header-bar mb-3">
          <div class="container d-flex flex-column flex-md-row align-items-center p-3">
            <h4 class="my-0 mr-md-auto font-weight-normal"><a href="/filters" class="text-white">Stack of wax</a></h4>
            <div class="flex-row my-3 my-md-0">
              <a href="/user/vinylList" class="mr-2"><img title="My Profile" class="avatar-small" data-toggle="tooltip" data-placement="bottom" style="width: 32px; height: 32px; border-radius: 16px" src="#" /></a>
              <a class="btn btn-sm btn-success mr-2" href="/user/vinylList">My vinyls</a>
              <form action="/user/logout" method="GET" class="d-inline">
                <button class="btn btn-sm btn-secondary">Sign Out</button>
              </form>
            </div>
          </div>
          </header>
      <% } else { %>
        <header class="header-bar mb-3">
          <div class="container d-flex flex-column flex-md-row align-items-center p-3">
            <h4 class="my-0 mr-md-auto font-weight-normal"><a href="/guest" class="text-white">Stack of wax</a></h4>
            <form action="/user/login" method="POST" class="mb-0 pt-2 pt-md-0">
              <div class="row align-items-center">
                <div class="col-md mr-0 pr-md-0 mb-3 mb-md-0">
                  <input name="username" class="form-control form-control-sm input-dark" type="text" placeholder="Username" autocomplete="off" />
                </div>
                <div class="col-md mr-0 pr-md-0 mb-3 mb-md-0">
                  <input name="password" class="form-control form-control-sm input-dark" type="password" placeholder="Password" />
                </div>
                <div class="col-md-auto">
                  <button class="btn btn-primary btn-sm">Login</button>
                  <a href="/" class="btn btn-primary btn-sm">Sign Up</a>
                </div>
              </div>
            </form>
          </div>
        </header>
      <% } %>