	<script>
	  // Wait for the DOM to load before executing the script
	 document.addEventListener("DOMContentLoaded", function() {
		// Select all the image elements with class "avatar-tiny"
		var imgs = document.querySelectorAll("img.avatar-tiny");

		// Loop over the image elements and change their src attribute
		for (var i = 0; i < imgs.length; i++) {
		  imgs[i].src = "images/vinyl.png";
		}
	  });
	  </script>
	  <script>
	  // Wait for the DOM to load before executing the script
	  document.addEventListener("DOMContentLoaded", function() {
		// Select all the image elements with class "avatar-tiny"
		var imgs = document.querySelectorAll("img.avatar-small");

		// Loop over the image elements and change their src attribute
		for (var i = 0; i < imgs.length; i++) {
		  imgs[i].src = "images/place-holder-account.png";
		}
	  });
	</script>
